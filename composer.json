{
  "name": "pagemachine/typo3-flat-urls",
  "description": "Flat URLs (like Stack Overflow) for TYPO3",
  "keywords": ["typo3", "urls", "flat", "stackoverflow"],
  "type": "typo3-cms-extension",
  "license": "GPL-3.0-or-later",
  "authors": [
    {
      "name": "Mathias Brodala",
      "email": "mbrodala@pagemachine.de"
    }
  ],
  "require": {
    "php": "^7.0",
    "dmitryd/typo3-realurl": "^2.0",
    "typo3/cms-backend": "^7.6 || ^8.7",
    "typo3/cms-core": "^7.6 || ^8.7",
    "typo3/cms-extbase": "^7.6 || ^8.7",
    "typo3/cms-frontend": "^7.6 || ^8.7"
  },
  "require-dev": {
    "cakephp/cakephp-codesniffer": "^3.0",
    "jakub-onderka/php-console-highlighter": "^0.3.2",
    "jakub-onderka/php-parallel-lint": "^0.9.2",
    "nimut/testing-framework": "^5.0",
    "phpstan/phpstan": "^0.8.5",
    "phpunit/phpunit": "^6.5",
    "sclable/xml-lint": "^0.2.2",
    "slevomat/coding-standard": "^4.0",
    "squizlabs/php_codesniffer": "^3.1"
  },
  "replace": {
    "flat_urls": "self.version",
    "typo3-ter/flat-urls": "self.version"
  },
  "config": {
    "sort-packages": true
  },
  "extra": {
    "typo3/cms": {
      "extension-key": "flat_urls",
      "cms-package-dir": "{$vendor-dir}/typo3/cms",
      "web-dir": "web"
    }
  },
  "scripts": {
    "analyze:php": "phpstan analyse --ansi --no-progress --configuration=phpstan.neon --level=5 *.php Classes Configuration Tests",
    "build": [
      "@composer require --no-progress --ansi --update-with-dependencies typo3/cms-core $TYPO3_VERSION",
      "@composer validate --ansi",
      "@lint",
      "@test"
    ],
    "build:cleanup": [
      "git reset --hard",
      "git clean -xfd"
    ],
    "deploy:ter": [
      "@build:cleanup",
      "@deploy:ter:setup",
      "@deploy:ter:upload"
    ],
    "deploy:ter:setup": [
      "@composer global require helhum/ter-client symfony/console:^3"
    ],
    "deploy:ter:upload": [
      "composer global exec -v -- ter-client upload --username $TYPO3_ORG_USERNAME --password $TYPO3_ORG_PASSWORD --upload-comment \"$(git tag -l --format='%(contents)' $TRAVIS_TAG)\" $(composer config extra.typo3/cms.extension-key) ."
    ],
    "fix:style": "phpcbf",
    "lint": [
      "@lint:php",
      "@lint:style",
      "@analyze:php",
      "@lint:xml"
    ],
    "lint:php": "parallel-lint --exclude vendor --exclude web .",
    "lint:xml": "xmllint --pattern '*.xlf,*.svg' Resources",
    "lint:style": "phpcs",
    "test:unit": "phpunit",
    "test:functional": [
      "mkdir -p web/typo3conf/ext",
      "ln -sfn ../../.. web/typo3conf/ext/$(composer config extra.typo3/cms.extension-key)",
      "phpunit --configuration phpunit-functional.xml"
    ],
    "test": [
      "@test:unit",
      "@test:functional"
    ]
  },
  "autoload": {
    "psr-4": {
      "Pagemachine\\FlatUrls\\": "Classes/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Pagemachine\\FlatUrls\\Tests\\": "Tests/"
    }
  }
}
